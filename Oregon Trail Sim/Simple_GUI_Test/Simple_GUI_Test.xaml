       Title="Simple_GUI_Test" Height="300" Width="300"> 
       <DockPanel>
        <StackPanel Orientation="Horizontal" Height="25" DockPanel.Dock="Top">
            <Label>Wood</Label>
            <TextBox Name="TxtWood">0</TextBox>
